<div class="container" style="padding-top: 100px">
  <div class="card border-success mb-3 mx-auto" style="max-width: 700px;">
    <div class="card-header">
      <h4 class="text-success text-center mb-0">Edit Account</h4>
    </div>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <div class="form-row">
          <div class="form-group col-md-6">
            <div>
              <%= f.text_field :full_name, autofocus: true, class: "form-control form-control-md", placeholder: "Full name" %>
            </div>
          </div>
          <div class="form-group col-md-6">
            <%= f.file_field :avatar, class:"form-group custom-file col-md-6" %>
            <span class="custom-file-control"></span>
          </div>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div>
          <%= f.text_field :headline, autofocus: true, class: "form-control form-control-md mb-3", placeholder: "Headline - e.g.: Ph.D Student, Rocket Scientist..." %>
        </div>
        <div>
          <%= f.text_field :work_place, autofocus: true, class: "form-control form-control-md mb-3", placeholder: "Workplace - e.g.: University of Sherbrooke, Neel Institute..." %>
        </div>
        <div class="form-group mb-0">
          <div class="form-row">
            <div class="form-group col-md-6">
              <%= f.password_field :password, autocomplete: "off", class:"form-control form-control-md", placeholder: "New password - If needed" %>
              <%# if @minimum_password_length %>
                <!--<em class="mb-3"><%#= @minimum_password_length %> characters minimum</em>-->
              <%# end %>
            </div>
            <div class="form-group col-md-6">
              <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control form-control-md", placeholder: "New password confirmation" %>
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="form-row">
            <div class="form-group col-md-12">
              <div class="d-flex align-items-center">
                <i class="mdi mdi-linkedin-box md-24 grey"></i>
                <%= f.text_field :linkedin, autocomplete: "off", class:"form-control form-control-md", placeholder: "LinkedIn" %>
              </div>
            </div>
          </div>
        </div>
        <div class="form-group">
          <%= f.password_field :current_password, autocomplete: "off", class:"form-control form-control-md", placeholder: "Current password - Needed to confirm changes" %>
        </div>
        <div align="center">
          <%= f.submit "Update", class:"btn btn-success" %>
          <%= link_to "Back", :back, class:"btn btn-outline-primary" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>

  <div class="card border-danger mb-3 mx-auto" style="max-width: 700px;">
    <div class="card-header">
      <h4 class="text-danger text-center mb-0">Cancel Account</h4>
    </div>
    <div class="card-body" align="center">
      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, class:"btn btn-danger", method: :delete %>
    </div>
  </div>
</div>
   
