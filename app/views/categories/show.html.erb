<div class="container" style="max-width: 800px">

  <h4> Articles in <%= @category.name %> </h4>
  <p class="pt-0 pb-2"><%= @category.description %></p>
  
  <% Article.where(category_id: @category.id).each do |article| %>
  
  <div class="card mb-3">
    <div class="row">
      <div class="col-sm-4 p-0">
        <img class="img-fluid thumb-category" src="//placehold.it/720x350">
      </div>
   
      <div class="col-sm-8">
        <div>
          <div class="d-flex justify-content-between align-items-end">
            <small class="text-muted pl-2">Published on <%= article.created_at.strftime("%B %d, %Y") %></small>
            <div class="bm-icon-cat">
              <% if user_signed_in? %>
                <% if current_user.liked? article %>
                  <%= link_to unbookmark_article_path(article), remote: true, id: "unlike_#{article.id}", method: :put do %>
                    <i class="material-icons">bookmark</i>
                  <% end %>
                <% else %>
                  <%= link_to bookmark_article_path(article), remote: true, id: "like_#{article.id}", method: :put do %>
                    <i class="material-icons">bookmark_border</i>
                  <% end %>
                <% end %>
              <% end %>
            </div>    
          </div>  
          <div class="">
            <%= link_to article_path(article), class: "card-link" do %>
              <strong class="d-flex card-title pl-2 m-0"><%= article.title %></strong>
              <small class="d-flex card-subtitle pl-2 m-0"><%= article.sub_title %></small>
            <% end %>
          </div>
          <div class="form-inline">
            <div class="p-2">
              <% author_avatar = User.find(article.user_id) %>
              <% if author_avatar.avatar != nil %>
              <%= image_tag(author_avatar.avatar.url(:thumb), class:"rounded-circle border border-secondary", style: "height: 60px; width: 60px;") %>
            <% end %>
            </div>
            <div class="pt-2">
              <h6 class="card-subtitle mb-2 text-muted"><%= article.author %></h6>
              <p class="card-subtitle mb-2 text-muted"><%= article.author_work_place %></p>
            </div>
          </div>          
        </div>
      </div>
 
    </div>
  </div>
  
  <% end %>

  <%= link_to 'Edit', edit_category_path(@category) %> |
  <%= link_to 'Back', categories_path %>
      
</div>

