<div class="container">
  <div class="row">
    
    <div class="col">
    </div>  
    
    <div class="col-8">
      <h2 class="text-center font-weight-bold">
        <%= @article.title %>
      </h2>
      <h4 class="text-center font-weight-light">
        <%= @article.author %> Â· <%= @article.created_at.strftime("%B %d, %Y") %>
      </h4>
      <h5 class="text-center font-weight-light">
        <%= @article.author_work_place %>
      </h5>
      
      <br></br>
      <div style="font-size: 1.2em;">
        <%= sanitize @article.body, tags: %w(p hr strong em a), attributes: %w(href) %>
      </div>
    </div>
    
    <div class="col">
        <%# if user_signed_in? && current_user.id == @article.user_id %>
          <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-primary" %>
        <%# end %>
    </div>
    
  </div>
</div>
