<div class="container">
  <div class="row" style="padding-top: 40px">
    
    <div class="col-sm">
    </div>  
    
    <div class="col-sm-8" style="border-bottom: 1px solid grey">
      <h2 class="text-center article-title">
        <%= @article.title %>
      </h2>
      <h5 class="text-center font-weight-light">
        <%= @article.author %> Â· <%= @article.author_work_place %>
      </h5>
      <h6 class="text-center font-weight-light">
        Published on <%= @article.created_at.strftime("%B %d, %Y") %>
      </h6>
      
      <br></br>
      <div class="article-body">
        <%= @article.body.html_safe %>
      </div>
    </div>

    <div class="col-sm">
      <%# if user_signed_in? && current_user.id == @article.user_id %>
        <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-outline-primary" %>
      <%# end %>
    </div>
  </div>
  
  <div class="row p-2">
    
    <div class="col-sm">
    </div> 
    
    <div class="col-sm-10" align="center">
      <div class="voting">
        <% if user_signed_in? %>
          <% if current_user.liked? @article, vote_scope: 'praise' %>
            <%= link_to downvote_article_path(@article), remote: true, id: "downvote_#{@article.id}", method: :put do %>
              <i class="material-icons md-36">favorite</i>
            <% end %>
            <h6 class="praise-count"><%= @article.find_votes_for(:vote_scope => "praise").size.to_s %></h6>
          <% else %>
            <%= link_to upvote_article_path(@article), remote: true, id: "upvote_#{@article.id}", method: :put do %>
              <i class="material-icons md-36">favorite_border</i>
            <% end %>
            <h6 class="praise-count"><%= @article.find_votes_for(:vote_scope => "praise").size.to_s %></h6>
          <% end %>
        <% else %>
          <%= link_to "", data: {toggle: "modal", target: "#modalSignup"} do %>
            <i class="material-icons md-36">favorite</i>
            <h6 class="praise-count"><%= @article.find_votes_for(:vote_scope => 'praise').size.to_s %></h6>
          <% end %>
          <%= render 'layouts/modal_signup' %>
        <% end %>
        </div> 
      </div> 

    <div class="col-sm">
    </div>
    
  </div> 
</div>
