
<% if params[:tag] %>
  <div class="container" style="max-width: 800px">
    <div class="section-title-sm">Articles tagged in <strong style="color: MediumPurple "><%= params[:tag].capitalize %></strong></div>
    <% @articles.each do |article| %>
      <%= render 'layouts/hcard_sm', article: article, class:"mb-2" %>
    <% end %>
  </div>
<% else %>

<h1>List of All Articles</h1>
<div class="container" style="max-width: 1400px">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>WP</th>
        <th>Category</th>
        <th>id</th>
        <th colspan="4"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.author %></td>
          <td><%= article.author_work_place %></td>
          <td><%= link_to Category.find(article.category_id).name, category_path(article.category_id) %></td>
          <td><%= article.id %></td>
          <td><%= link_to 'Show', article %></td>
          <% if user_signed_in? %>
            <%-# if article.user_id == current_user.id -%>
              <td><%= link_to 'Edit', edit_article_path(article) %></td>
              <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <%-# end -%>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>
  
  <!-- <%= link_to 'New Article', new_article_path %> -->
  
  <div class="container" style="max-width: 800px">

<% end %>