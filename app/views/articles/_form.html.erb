<div class="container">
  <%= form_for(@article) do |f| %>
  
  <div>
    <%= f.text_field :title, class: "form-control form-control-lg border-top-0 border-left-0 border-right-0 mb-2", placeholder: "Title" %>
  </div>
  
  <div>
    <%= f.text_field :sub_title, class: "form-control form-control-md border-top-0 border-left-0 border-right-0", placeholder: "Sub-title" %>
  </div>
    
  <br>
  
  <%= f.text_area :body, class: "tinymce", :rows => 10, :cols => 120 %>
  
  <br>
  
    
  
  
  <div class="d-flex justify-content-center">
    <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select Category", class: "custom-select") %>
    <button type="submit" class="btn btn-primary ml-3">Publish</button>
    <%= f.text_field :user_id, value: current_user.id, type: "hidden" %>
    <%= f.text_field :author, value: current_user.full_name, type: "hidden" %>
    <%= f.text_field :author_work_place, value: current_user.work_place, type: "hidden" %>
  </div>
</div>

<% end %>