<% if @articles.blank? %>
  <h4>There are no articles containing the term <%= params[:q] %>.</h4>
<% else %>
 <h1>Articles Found</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>WP</th>
        <th>Category</th>
        <th>id</th>
        <th colspan="4"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @articles.each do |article| %>
        <tr>
          <td><%= article.title %></td>
          <td><%= article.author %></td>
          <td><%= article.author_work_place %></td>
          <td><%= link_to Category.find(article.category_id).name, category_path(article.category_id) %></td>
          <td><%= article.id %></td>
          <td><%= link_to 'Show', article %></td>
          <% if user_signed_in? %>
            <%-# if article.user_id == current_user.id -%>
              <td><%= link_to 'Edit', edit_article_path(article) %></td>
              <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <%-# end -%>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<% if @categories.blank? %>
  <h4>There are no categories containing the term <%= params[:q] %>.</h4>
<% else %>
  <h1>Categories Found</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>id</th>
        <th colspan="4"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @categories.each do |cat| %>
        <tr>
          <td><%= cat.name %></td>
          <td><%= cat.id %></td>
          <td><%= link_to 'Show', cat %></td>
          <% if user_signed_in? %>
            <%-# if user.user_id == current_user.id -%>
              <td><%= link_to 'Edit', edit_category_path(cat) %></td>
              <td><%= link_to 'Destroy', cat, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <%-# end -%>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<% if @users.blank? %>
  <h4>There are no users containing the term <%= params[:q] %>.</h4>
<% else %>  

  <h1>Users Found</h1>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>WP</th>
        <th>id</th>
        <th colspan="4"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.full_name %></td>
          <td><%= user.work_place %></td>
          <td><%= user.headline %></td>
          <td><%= user.id %></td>
